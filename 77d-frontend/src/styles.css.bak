@tailwind base;
@tailwind components;
@tailwind utilities;

/* Force dark background to avoid white flash */
html, body, #root { height: 100%; background-color: #071029 !important; color: white; }

:root{
  --bg:#071029;
  --panel:#041126;
  --gold:#D8A600;
}
body{ margin:0; font-family:ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial; background:var(--bg); color:white; }

/* small shimmer for placeholders */
@keyframes shimmer {
  0% { background-position: -200% 0; }
  100% { background-position: 200% 0; }
}
.animate-pulse { background: linear-gradient(90deg,#f5e6b3 0%, #ffd966 50%, #f5e6b3 100%); background-size: 200% 100%; animation: shimmer 1.2s linear infinite; }
